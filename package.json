{
  "name": "@nyren/codebase-setup",
  "version": "0.1.0",
  "description": "A CLI tool designed to streamline project setup for JavaScript and TypeScript, providing essential libraries and configurations for quick initialization and efficient workflows.",
  "bin": {
    "nyrenx-codeup": "lib/cli/nyrenx.js"
  },
  "main": "lib/main.js",
  "type": "module",
  "files": [
    "lib",
    "tsconfigs/cjs.json",
    "tsconfigs/esm.json",
    "repo-template"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "cli": "bun src/cli/nyrenx.ts ",

    "build": "tsc",
    "lint": "prettier --check 'src/**/*.{js,ts}' 'lib/esm/**/*.{js,ts}' 'lib/cjs/**/*.{js,ts}' 'lib/types/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}' 'lib/esm/**/*.{js,ts}' 'lib/cjs/**/*.{js,ts}' 'lib/types/**/*.{js,ts}'",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Saksorn21/nyren-ts-setup.git"
  },
  "keywords": [
    "cli",
    "command line",
    "setup",
    "project management",
    "tools",
    "nyren",
    "typescript",
    "javascript",
    "typescript setup",
    "javascript setup",
    "workflow automation",
    "repository",
    "configuration",
    "template"
  ],
  "author": "Boat Saksorn (Thailand)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Saksorn21/nyren-ts-setup/issues"
  },
  "homepage": "https://github.com/Saksorn21/nyren-ts-setup#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "log-symbols": "^7.0.0",
    "ora": "^8.1.0",
    "tslib": "^2.7.0"
  }
}
